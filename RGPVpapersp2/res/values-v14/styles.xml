<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        -->
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/menu_bar</item>
        <item name="android:drawableBottom">@color/menu_bar</item>
    </style>

    <style name="MenuBarTitleStyle">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="spinnerDropdownStyle">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>